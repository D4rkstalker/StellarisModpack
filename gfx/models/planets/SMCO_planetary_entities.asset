entity = {
	name = "SMCO_rogue_planet_thick_atmosphere_01_entity"
	pdxmesh = "planet_clouded_mesh"

	meshsettings = {
	name = "planet_geosphereShape"
	texture_diffuse = "SMCO_rogue_planet_01_diffuse.dds"
	texture_normal = "SMCO_rogue_planet_01_normal.dds"
	texture_specular = "SMCO_rogue_planet_01_specular.dds"
	}

	##pole texture override
	meshsettings = {
	name = "polesShape"
	texture_diffuse = "nodiffuse.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "nospec.dds"
	}
	
	##cloud texture override
	meshsettings = {
	name = "clouds_geosphereShape"
	texture_diffuse = "toxic_clouds_dark_diffuse.dds"
	texture_normal = "toxic_clouds_normal.dds"
	texture_specular = "toxic_clouds_specular.dds"
