######
# Rogue planets (barren)
######
entity = {
	name = "SMCO_rogue_planet_01_entity"
	pdxmesh = "planet_no_pole_no_clouds_mesh"
	 
	meshsettings = {
	name = "planet_geosphereShape"
	shader = "PdxMeshPlanetEmissive"
	texture_diffuse = "SMCO_rogue_planet_01_diffuse.dds"
	texture_normal = "SMCO_rogue_planet_01_normal.dds"
	texture_specular = "SMCO_rogue_planet_01_specular.dds"
	}
	
	default_state = "idle"
	playback_rate = -1.0 # Rotation is reversed
	state = {
		name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
}

