###########################
# Special tomb planet
###########################
# Diffuse: 4k | Normal: 2k | Specular: 2k
###########################
# Tomb Nuked
entity = {
	name = "nuked_planet_tomb_entity"
	pdxmesh = "nuked_planet_01_mesh"
	meshsettings = {
		name = "planet_geosphereShape"
		shader = "PdxMeshPlanetEmissive"
		texture_diffuse = "ig_tomb_nuked_01_2k_diffuse.dds"
		texture_normal = "ig_tomb_nuked_01_2k_normal.dds"
		texture_specular = "ig_tomb_nuked_01_2k_specular.dds"
	}
	##cloud texture override
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "nuked_clouds_medium_diffuse.dds"
		texture_normal = "nuked_clouds_medium_normal.dds"
		texture_specular = "nospec.dds"
	}
	##cloud shadow texture override
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "clouds_nuke_shadow_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	##pole texture override
	meshsettings = {
		name = "polesShape"
		texture_diffuse = "ig_tomb_nopole.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
	}
}
