	pdxmesh = "humanoid_01_colossus_mesh"
	scale = 0.33 #dss
	
	default_state = "idle"
	# Actual idle state when being in idle/moving.
	state = { name = "idle" animation = "idle" looping = no next_state = "idle" animation_blend_time = 5
		chance = {
			if_current_state = {
				"idle" = 100
				"moving" = 100
				"death" = 0
				"working" = 100
				"working_looping" = 0
			}
		}
