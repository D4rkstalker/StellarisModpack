######
# Jobs pertaining to FE hivemind
######

FEE_spawning_drone = {
	category = precursor
	condition_string = DRONE_JOB_TRIGGER
    building_icon = building_spawning_pool
    icon = spawning_drone
		
	possible = {
		hidden_trigger = { exists = owner }
        owner = { 
            is_fallen_empire = yes
			is_hive_empire = yes
        }		
		drone_job_check_trigger = yes
	}
	
	planet_modifier = {
		planet_amenities_no_happiness_add = 2.75
		pop_growth_speed = 0.017
	}
	
	resources = {
		category = planet_jobs
		upkeep = {
			food = 2.25
		}
	}
	
	weight = {
		weight = 40000
	}
}

FEE_defense_drone = {
	category = precursor
	icon = enforcer
	building_icon = building_sentinel_posts
	clothes_texture_index = 2
		
	possible = {
		hidden_trigger = { exists = owner }
        owner = { 
            is_fallen_empire = yes
			is_hive_empire = yes
        }		
		drone_job_check_trigger = yes
	}

	planet_modifier = {
		planet_crime_add = -35
	}
	
	pop_modifier = {
		pop_defense_armies_add = 1
	}
	
	weight = {
		weight = 30000
	}
}

FEE_livestock = {
	category = worker
	is_capped_by_modifier = no
	clothes_texture_index = 2
	icon = livestock

	possible = {
		hidden_trigger = { exists = owner }
		owner = { 
			is_fallen_empire = yes
			has_country_flag = FE_hivemind 
		}
		NOT = {is_same_species = owner }
	}
	
	triggered_pop_modifier = {
		potential = {
			is_organic_species = yes
		}
		pop_housing_usage_add = -0.5
	}

	planet_modifier = {
		planet_amenities_add = 1
	}

	resources = {
		category = planet_livestock
		produces = {
			food = 7
		}
	}
		
	weight = {
		weight = 30000
	}
}

FEE_slaves = {
	category = worker
	is_capped_by_modifier = no
	building_icon = building_luxury_residence
	clothes_texture_index = 2
	icon = servant

	possible = {
		hidden_trigger = { exists = owner }
		owner = { 
			has_ethic = ethic_fanatic_xenophobe
			is_fallen_empire = yes 
		}
		NOT = {is_same_species = owner }
	}
	
	triggered_pop_modifier = {
		potential = {
			is_organic_species = yes
		}
		pop_housing_usage_add = -0.5
	}
	#removes negative ammenities(matches vanilla FE)
	planet_modifier = {
		planet_amenities_add = 5
	}
	#cancels out food need for slaves
	resources = {
		category = planet_livestock
		produces = {
			food = 1
		}
	}

}